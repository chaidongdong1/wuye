/* pages/start/start.wxss */

.start {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: relative;
}

.start-image {
  width: 100%;
  height: 100%;
}

.start-image>image {
  width: 100%;
  height: 100%;
}

.start-anniu {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
}

.start-title {
  width: 100%;
  height: auto;
  text-align: center;
  font-size: 48rpx;
  color: #fff;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.start-nr {
  font-size: 32rpx;
  color: #fff;
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  overflow: hidden;
  text-align: center;
}

.start-button {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background: #FF9944;
  margin: 850rpx auto 0 auto;
  border-radius: 20rpx;
  text-align: center;
}
.start-button::after{
	border:0;
}