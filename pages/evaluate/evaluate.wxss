.evaluate{
	width: 100%;
}
.fenlei{
	display: flex;
	justify-content: space-between;
	background: #fff;
}
.quanbu,.youtu,.haoping,.zhongping,.chaping{
	width: 150rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
}

.quanbu view:first-child,.youtu view:first-child,.haoping view:first-child,.zhongping view:first-child,.chaping view:first-child{
	padding: 15rpx 0;
	font-size: 28rpx;
}
.quanbu view:last-child,.youtu view:last-child,.haoping view:last-child,.zhongping view:last-child,.chaping view:last-child{
	padding-bottom: 20rpx;
	font-size: 28rpx;
}
.active_pj{
	color: red;
	border-bottom: 2px solid #ff0000;
}
.user-pj{
	background: #fff;
}
.user-top{
	display: flex;
	padding-top: 20rpx;
	justify-content: space-between;
/*	padding-bottom: 64rpx;*/
}
.user-tou image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	vertical-align: middle;
	margin: 0 20rpx 12rpx 0;
}
.user-tou text{
	font-size: 28rpx;
	font-weight: 700;
}
.user-riqi{
	height: 80rpx;
	line-height: 80rpx;
	font-size: 24rpx;
	color: #b3b3b3;
}
.pjxx{
	width: 180rpx;
}
.pjxx image{
	width: 25rpx;
	height: 26rpx;
	margin-right: 10rpx;
}
