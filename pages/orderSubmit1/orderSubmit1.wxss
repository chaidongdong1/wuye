/* pages/orderSubmit/orderSubmit.wxss */

.submit {
  width: 100%;
  height: auto;
}

.sub-top {
  width: 702rpx;
  height: 100rpx;
  padding: 0 24rpx;
  line-height: 100rpx;
  display: flex;
  background: #fff;
}

.sub-top>view:first-child {
  width: 35rpx;
  height: 35rpx;
  margin: 8rpx 10rpx 0 0;
}

.sub-top>view:first-child>image {
  width: 100%;
  height: 100%;
}

.sub-top>view:nth-child(2) {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.sub-top>view:last-child {
  width: 15rpx;
  height: 20rpx;
}

.sub-top>view:last-child>image {
  width: 100%;
  height: 100%;
}

.sub-address-image {
  width: 100%;
  height: 8rpx;
  margin-bottom: 10rpx;
}

.sub-address-image>image {
  width: 100%;
  height: 100%;
  display: block;
}

.sub-address {
  width: 702rpx;
  height: auto;
  padding: 40rpx 24rpx;
  display: flex;
  background: #fff;
}

.sub-address>view:first-child {
  width: 50rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.sub-address>view:first-child>image {
  width: 100%;
  height: 100%;
}

.sub-a-nr {
  flex: 1;
}

.sub-a-nr>view:first-child {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
}

.sub-a-nr>view:last-child {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
  line-height: 32rpx;
}

.sub-address>view:last-child {
  width: 20rpx;
  height: 30rpx;
  margin-left: 30rpx;
  margin-top: 15rpx;
}

.sub-address>view:last-child>image {
  width: 100%;
  height: 100%;
}
.order-wai{
  width: 100%;
  height: auto;
}
.order-wai>.order-l-one:last-child{
  padding-bottom: 20rpx;
}
.order-l-one {
  width: 100%;
  height: auto;
  background: #fff;
}

.order-one-top {
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  border-bottom: 1px solid #eee;
  display: flex;
}

.order-one-top>image {
  width: 30rpx;
  height: 30rpx;
  margin: 32rpx 20rpx 32rpx 24rpx;
}

.order-one-top>view:nth-child(2) {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  display: flex;
}

.order-one-top>view:nth-child(2)>text {
  padding-left: 20rpx;
}

.order-one-top>view:last-child {
  font-size: 30rpx;
  color: #e4393c;
  margin-right: 24rpx;
}

.order-shop {
  width: 702rpx;
  height: auto;
  margin: 20rpx 24rpx 0 24rpx;
  background: #f5f2f2;
}

.order-s-one {
  width: 664rpx;
  height: 180rpx;
  padding: 20rpx 20rpx 0 20rpx;
  display: flex;
  justify-content: space-between;
}

.order-s-one:last-child {
  padding-bottom: 20rpx;
}

.order-s-one>view:first-child {
  width: 180rpx;
  height: 180rpx;
  margin-right: 25rpx;
}

.order-s-one>view:first-child>image {
  width: 100%;
  height: 100%;
}

.order-shop-nr {
  flex: 1;
}

.order-shop-nr>view:first-child {
  width: 100%;
  height: 64rpx;
  line-height: 32rpx;
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.order-shop-nr>view:nth-child(2) {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

.order-shop-nr>view:last-child {
  font-size: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #df273f;
  margin-top: 25rpx;
  display: flex;
  justify-content: space-between;
}
.order-shop-nr>view:last-child>text{
  font-size: 24rpx;
  color: #999;
}
